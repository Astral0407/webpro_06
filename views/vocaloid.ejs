<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>ボカロ曲</title>
</head>
<body>
  <h2>ボカロ曲一覧</h2>

  <table border="1">
    <tr>
      <th>ID</th>
      <th>動画ID</th>
      <th>曲名</th>
      <th>操作</th>
    </tr>

    <% data.forEach((row, index) => { %>
      <tr>
        <td><%= row.id %></td>
        <td><%= row.url %></td>
        <td><a href="/vocaloid/<%= index %>"><%= row.name %></a></td>

        <!-- 編集と削除の新しい列 -->
        <td>
          <a href="/vocaloid/edit/<%= index %>">編集</a>
          |
          <a href="/vocaloid/delete/<%= index %>">削除</a>
        </td>
      </tr>
    <% }) %>
  </table>

  <br>
  <a href="/vocaloid/create">追加</a>
</body>
</html>